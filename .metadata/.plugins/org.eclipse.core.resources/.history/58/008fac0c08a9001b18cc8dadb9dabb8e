package model;

import com.java3rdday.homework.User;

public class Instructor extends User{
	private double salary;
	
	public Instructor(int id, String name, String surname, double salary) {
		this.id = id;
		this.name = name;
		this.surname = surname;
		this.salary = salary;
	}
	
	public void getInformation(Instructor instructor) {
		System.out.println("ID: " + instructor.getId());
		System.out.println("Name: " + instructor.getName());
		System.out.println("Surname: " + instructor.getSurname());
		System.out.println("Salary: " + instructor.getSalary());
	}

	public double getSalary() {
		return salary;
	}

	public void setSalary(double salary) {
		this.salary = salary;
	}
	
	
}
